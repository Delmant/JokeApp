<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_joke"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/gl_left_guid_line"
        app:layout_constraintTop_toTopOf="@id/gl_top_guid_line"
        app:layout_constraintEnd_toEndOf="@id/gl_right_guid_line"
        app:layout_constraintBottom_toBottomOf="@id/gl_bottom_guid_line"
        android:textSize="23sp"

        tools:text="My grandfather says I'm too reliant on technology.\nI called him a hypocrite and unplugged his life support."
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_guid_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_left_guid_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_right_guid_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_guid_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
    <Button
        android:id="@+id/btn_generate_joke"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Generate"
        app:layout_constraintTop_toTopOf="@id/gl_bottom_guid_line"
        app:layout_constraintStart_toStartOf="@id/gl_left_guid_line"
        app:layout_constraintEnd_toEndOf="@id/gl_right_guid_line"
        />

</androidx.constraintlayout.widget.ConstraintLayout>